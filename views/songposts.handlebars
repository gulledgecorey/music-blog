<div class="container songpost-container">
  {{#each songPosts as |songPost|}}
    <div class="card songpost-card">

      <div class="card-content">
        <div class="media">
          <div class="media-left left-card">
            <p class="subtitle is-6">@johnsmith</p>
            <div class="content">
              <br />
              I love this song omg!!! The beat is cool and the artist is my
              favorite. 

            </div>
            <button class="button is-success is-light">Reply</button>
          </div>
          <div class="media-content">

            <figure class="image is-100x100">
              <img
                src="https://bulma.io/images/placeholders/96x96.png"
                alt="Album Art"
              />
            </figure>
            <h3>
              Song Title
            </h3>
            <h5>
              Artist Name
            </h5>
            <h5>
              Album Name
            </h5>
          </div>
        </div>

      </div>
    </div>
  {{/each}}
</div>