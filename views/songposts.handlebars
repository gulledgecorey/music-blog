<div class='container songpost-container'>
  {{#each songPosts as |songPost|}}
    <div class='card songpost-card'>

      <div class='card-content'>
        <div class='media'>
          <div class='media-left left-card'>

            <p class='subtitle is-6'>@{{songPost.user.username}}</p>
            <div class='content'>
              <br />
              {{songPost.post}}
            </div>
            {{!-- <button
              class="button is-success is-light"
              data-songid={{songPost.id}}
              id="reply"
            >Reply</button> --}}
          </div>
          <div class=''>

            <figure class='image'>
              <img src={{songPost.song_image}} alt='Album Art' />
            </figure>
            <h3>
              {{songPost.song_title}}
            </h3>
            <h5>
              {{songPost.song_artist}}
            </h5>
            <h5>
              <a href={{songPost.song_link}}>
                Listen to it here!
              </a>
            </h5>
          </div>
        </div>

      </div>
    </div>
  {{/each}}

</div>

<script src='./js/SongPosts.js'>
</script>